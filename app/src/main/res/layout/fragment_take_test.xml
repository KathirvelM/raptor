<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center|end"
                    android:padding="@dimen/margin_5"
                    android:text="Time Left : 00:00:00"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/title_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white_grey"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_5"
                    android:text="@string/full_test"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:padding="@dimen/margin_5"
                    android:text="QUESTION NO. : 1/45 SUBJECT : PHYSICS"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:padding="@dimen/margin_5"
                    android:text="QUESTION TYPE : NUMERICAL SCIENCE"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/dark_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@color/red_light"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/margin_40"
                        android:padding="@dimen/margin_5"
                        android:text="What is the temperature in Farenheit of 30°C?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16" />

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_5">

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_margin="4dp"
                            android:buttonTint="@color/colorPrimaryDark"
                            android:text="86°F"
                            android:textAlignment="textStart"
                            android:textSize="14sp" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_margin="4dp"
                            android:buttonTint="@color/colorPrimaryDark"
                            android:text="45°F"
                            android:textAlignment="textStart"
                            android:textSize="14sp" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_margin="4dp"
                            android:buttonTint="@color/colorPrimaryDark"
                            android:text="56°F"
                            android:textAlignment="textStart"
                            android:textSize="14sp" />

                        <RadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_margin="4dp"
                            android:buttonTint="@color/colorPrimaryDark"
                            android:text="72°F"
                            android:textAlignment="textStart"
                            android:textSize="14sp" />


                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_10"
                        android:text="Previous"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_16"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/take_test_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_16"
                        android:background="@drawable/bg_login_btn"
                        android:padding="@dimen/margin_10"
                        android:text="save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:padding="@dimen/margin_10"
                        android:text="Next"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_16"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_16"
                        android:layout_weight="1"
                        android:background="@drawable/bg_login_btn"
                        android:padding="@dimen/margin_10"
                        android:text="review later"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16" />

                    <Button
                        android:id="@+id/finish"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_16"
                        android:layout_weight="1"
                        android:background="@drawable/bg_login_btn"
                        android:padding="@dimen/margin_10"
                        android:text="finish"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/test_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_10" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>