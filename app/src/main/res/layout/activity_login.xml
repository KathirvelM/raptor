<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="20dp"
    tools:context="com.neet.raptor.activity.LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:contentPadding="@dimen/margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:src="@drawable/icn_login" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@drawable/bg_login_edt"
                android:drawableLeft="@drawable/ic_login_user"
                android:drawablePadding="@dimen/margin_10"
                android:drawableTint="@color/grey_mid"
                android:hint="@string/hint_username"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/margin_12"
                android:paddingTop="@dimen/margin_12"
                android:paddingRight="@dimen/margin_12"
                android:paddingBottom="@dimen/margin_12"
                android:singleLine="true"
                android:textSize="@dimen/font_16" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@drawable/bg_login_edt"
                android:drawableLeft="@drawable/ic_login_pass"
                android:drawablePadding="@dimen/margin_10"
                android:drawableTint="@color/grey_mid"
                android:hint="@string/hint_password"
                android:imeOptions="actionDone"
                android:paddingLeft="@dimen/margin_12"
                android:paddingTop="@dimen/margin_12"
                android:paddingRight="@dimen/margin_12"
                android:paddingBottom="@dimen/margin_12"
                android:singleLine="true"
                android:textSize="@dimen/font_16" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_login"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/bg_login_btn"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingTop="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_8"
                    android:text="@string/label_login"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_logn_img"
                    android:padding="10dp"
                    android:src="@drawable/ic_login"
                    android:tint="@color/grey" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_forgot_password"
                style="@style/sub_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center"
                android:text="@string/label_forgot_password"
                android:textSize="@dimen/font_16" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
